<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference android:title="Auto Palette"
                        android:defaultValue="false"
                        android:summary=
                            "When selected, message backgrounds will be based on avatar colors."
                        android:key="@string/auto_palette_preference" />
    <ListPreference     android:title="Color Scheme"
                        android:summary="Select the color scheme that you want for the chat"
                        android:key="@string/color_scheme_preference"
                        android:defaultValue="1"
                        android:entries="@array/listArray"
                        android:entryValues="@array/listValues" />
</PreferenceScreen>
